{
  "$schema": "http://json-schema.org/schema",
  "$id": "CustomController",
  "title": "Custom Controller Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the controller",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the controller",
      "visible": false
    },
    "skipImport": {
      "type": "boolean",
      "default": false,
      "description": "Skip importing the controller in the module"
    },
    "flat": {
      "type": "boolean",
      "default": false,
      "description": "Create files in a flat structure"
    }
  },
  "required": ["name"]
}